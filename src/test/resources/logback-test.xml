<?xml version="1.0" encoding="UTF-8"?>
<!-- Spring boot testing has very early initialization, that's why before applying logging properties from
     application.properties it makes already a large DEBUG output, that's why, opposite to main app, for the tests
     we use logback-test.xml, but not application.properties -->
<configuration debug="true">
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>
    <appender name="JSON-STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <message/>
                <arguments/>
                <logstashMarkers/>
                <!-- Some fields are mapped to camel-case for consistency -->
                <timestamp>
                    <!-- Map default "@timestamp" to "timestamp" -->
                    <fieldName>timestamp</fieldName>
                </timestamp>
                <loggerName>
                    <!-- Map default "logger_name" to "loggerName" -->
                    <fieldName>loggerName</fieldName>
                </loggerName>
                <logLevel>
                    <!-- Map default "logLevel" to "severity" for GCP Stackdriver -->
                    <fieldName>severity</fieldName>
                </logLevel>
                <stackHash>
                    <!-- Map default "stack_hash" to "stackHash" -->
                    <fieldName>stackHash</fieldName>
                </stackHash>
                <stackTrace>
                    <!-- Map default "stack_trace" to "stackTrace" -->
                    <fieldName>stackTrace</fieldName>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepthPerThrowable>30</maxDepthPerThrowable>
                        <maxLength>2048</maxLength>
                        <shortenedClassNameLength>20</shortenedClassNameLength>
                        <rootCauseFirst>true</rootCauseFirst>
                    </throwableConverter>
                </stackTrace>
            </providers>
        </encoder>
    </appender>

    <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="JSON-STDOUT"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="ASYNCSTDOUT"/>
    </root>
   <!-- suppress over-flood debugging info in the tests:
         by default spring boot and netty output over 10 thousand lines for just 4 tests!
         The packages below are the most flooding ones, so use INFO level for them. -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="org.asynchttpclient.netty" level="INFO"/>
</configuration>